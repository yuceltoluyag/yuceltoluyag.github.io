{
  "name": "minel",
  "version": "1.0.0",
  "description": "Kardeşim Yılan Yap Kendini",
  "main": "gulpfile.babel.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=development npx gulp",
    "start:dev": "gulp --noserviceworker",
    "build": "NODE_ENV=production npx gulp build_prod",
    "deploy": "npx vercel --prod",
    "setup": "npm install && bundle install",
    "lint": "eslint '_assets/js/**/*.js'",
    "prettier": "prettier '_assets/js/**/*.js' --write"
  },
  "author": "yuceltoluyag",
  "license": "ISC",
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.19.4",
    "@babel/register": "^7.18.9",
    "broken-link-checker": "^0.7.8",
    "browser-sync": "^2.27.10",
    "canvas": "^2.10.2",
    "chalk": "^5.1.2",
    "del": "^7.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-debug": "^4.0.0",
    "gulp-duration": "^0.0.0",
    "gulp-gm": "^0.0.9",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "8.0.0",
    "gulp-inline-source": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^4.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^7.0.0",
    "jsdom": "^20.0.3",
    "lodash.merge": "^4.6.2",
    "mkdirp": "^1.0.4",
    "ngrok": "^4.3.3",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "sync-request": "^6.1.0",
    "yargs": "^17.6.2"
  }
}
